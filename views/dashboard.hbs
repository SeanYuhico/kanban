<html>
    <head>
        <link rel = "stylesheet" href = "/css/dashboard.css"/>
    </head>
    <body>
        <div class="navigation">
            <!-- This is the only component that is required -->
            <!--<button class="menu-toggle" onclick="DropdownToggle()">
                <span class="glyphicon glyphicon-menu-hamburger glyphicon-image"></span>
            </button>-->
            <ul class="nav-left">
                <li class="menu-toggle">User</li>
                <li class="active"><a href="#">Home</a></li>
                <li class="menu-toggle">Boards</li>
            </ul>
            <a href="#" class="kanban-label"><h1>Kanban</h1></a>
            <ul class="nav-right">
                {{!-- <li class="menu-toggle">Add</li> --}}
                {{!-- <li><a href="#">About</a></li> --}}
                <li>
                    {{!-- <a href="#">Log Out</a> --}}
                    <form action="logout" method="POST">
                        <br>
                        <input class="logoutbutton" type="submit" value="Log out">
                    </form>
                </li>
            </ul>
        </div>
        <div class="add-board-form-container">
            <form class="add-board-form" action="/add" method="POST">
                New Board Title <br>
                <input class="add-board-textfield" placeholder="board title" value="" name="name" type="text">
                <input class="add-board-submit" value="done" type="submit">
            </form>
        </div>
        <div class="board-list-panel">
            <div>
                <h3>Your Boards</h3>
            </div>
            
            <div class="board-ctnr">
                {{#each board}}
                <a href="#" data-id={{_id}} class="board">
                        <div class="board-name">{{boardName}}</div>
                        <div class="favorite-toggle"></div>
                </a>
                {{/each}}
                <div class="add-board board">
                    <div class="board-name">Add new board</div>
                </div>
            </div>
        </div>
    </body>
</html>